#include <math.h>
#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

double fun_scan();
float function(int a);
int factorial(int k);

int main()
{
    int a = fun_scan();
    float s=function(a);
    printf("%f\n", s);
    return 0;
}

float function(int a)
{
    float b, c;
    for(int i = 1; i < a; i++)
    {
        b=pow(-1,i)/factorial(i*2);
        c+=b;
    }
    return c;
}

int factorial(int k)
{
    int result = 1;
    for (int i=1; i<=k; i++)
    {
        result = result * i;
        return result;
    }
}

double fun_scan() 
{
    double value;
    int result = scanf("%lf", &value);
    if (result != 1)
    {
        printf("error io");
        abort();
    } 
    return value;
}
