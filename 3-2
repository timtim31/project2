#include <math.h>
#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

/**
 * @brief Функция проверки ввода на число 
 * @param a значение вводимого параметра 
 * @return Результат проверки   
*/
int fun_scan();

/**
 * @brief Функция расчета формулы
 * @param kol значение параметра
 * @return Значение вычислений  
*/
float function(int kol);

/**
 * @brief Функция расчёта факториала
 * @param k значение вводимого параметра 
 * @return Значение вычисления   
*/
int factorial(int k);

int main(){
 int a;
 a = fun_scan();
 function(a);
 return 0;
}

float function(int kol)
{
 int a;
 float b, c;
 
 for(int i = 0; i < kol; i++){
 a = pow(-1,i);
 b=pow(-1,i)/factorial(i+2);
 c+=b;
 }
 printf("%f\n", c);
 return 0;
}

int factorial(int k){
 int result = 1;
 for (int i=1; i<=k; i++)
 result = result * i;
 return result;
}

int fun_scan() {
 int a;
 int b;
 a = scanf("%d", &b);
 if (a != 1) {
 abort();
 } else {
 return b;
 }
}
