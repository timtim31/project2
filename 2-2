#include <stdio.h> 
#include <math.h> 
#include <stdlib.h>

/** 
 * @brief Функция расчета формулы
 * @param x, a значения параметров
 * @return q значение вычислений  
*/
float function1(float x, float a, float q);

/**
 * @brief Функция расчета формулы
 * @param x, a значения параметров
 * @return q значение вычислений  
*/
float function2(float x, float a, float q);

/**
 * @brief Функция расчета формулы
 * @param x, a значения параметров
 * @return q значение вычислений  
*/
float function3(float x, float a, float q);

/**
 * @brief Функция проверки ввода на число 
 * @param value значение вводимого параметра 
 * @return Результат проверки   
*/
double fun_scan();

/**
 * @brief Вводимое значение в программу 
 * @return Вывод 0, если программа неверна. Иначе вывод 1
*/
int main();

int main()
{
    float a, x, y, q;
    a=2.5;
    x = fun_scan();
    if (x<0.5) {
        y=function1(x, a, q);
        printf("y=%f\n", y);
    }
    if (x==0.5) {
        y=function2(x, a, q);
        printf("y=%f\n", y);
    }
    if (x>0.5) {
        y=function3(x, a, q);
        printf("y=%f\n", y);
    }
}

float function1(float x, float a)
{
    return (pow((a*pow(x,2) +1),0.5));
}

float function2(float x, float a)
{
    return (a*x +3);
}
float function3(float x, float a)
{
    return (pow((a*pow(x,2) -1),0.5));
}

double fun_scan() {
  double value;
  int result = scanf("%lf", &value);
    if (result != 1)
    {
      printf_s("error io");
      abort();
    } 
    return value;
}
